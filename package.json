{
  "name": "trade-demo-journey-tests",
  "version": "0.0.0",
  "type": "module",
  "description": "",
  "engines": {
    "node": ">=22.13.1"
  },
  "author": "Defra DDTS",
  "license": "OGL-UK-3.0",
  "aliases": {
    "~": ".",
    "page-objects": "test/page-objects",
    "components": "test/components"
  },
  "scripts": {
    "create:folders": "mkdir -p allure-results && mkdir -p allure-report",
    "test": "playwright test",
    "test:browserstack": "browserstack-node-sdk playwright test --config=playwright.browserstack.config.js",
    "test:local": "playwright test --config=playwright.local.config.js",
    "test:local:debug": "playwright test --config=playwright.local.config.js --debug",
    "test:local:browserstack": "browserstack-node-sdk playwright test --config=playwright.local.browserstack.config.js --browserstack.config=browserstack.local.yml",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "format": "prettier --write '**/*.{ts,mjs,json,md}'",
    "format:check": "prettier --check '**/*.{ts,mjs,json,md}'",
    "prettier:fix": "npx prettier --write .",
    "postinstall": "npm run setup:husky",
    "git:pre-commit-hook": "npm run format:check && npm run lint",
    "setup:husky": "node -e \"try { (await import('husky')).default() } catch (e) { if (e.code !== 'ERR_MODULE_NOT_FOUND') throw e }\" --input-type module",
    "report": "allure generate allure-results --single-file --clean -o allure-report",
    "report:open": "allure open allure-report",
    "report:publish": "npm run report; ./bin/publish-tests.sh",
    "zap:start": "/zap/zap.sh -daemon -host 0.0.0.0 -port 8080 -silent -nostdout -config api.addrs.addr.name=.* -config api.addrs.addr.regex=true -config api.disablekey=true -config anticsrf.tokens.token.name=crumb",
    "docker:test:local": "npm run create:folders && docker compose run --build --rm -e TEST_SCRIPT=local fcp-mpdp-journey-test-suite",
    "docker:test:local:browserstack": "npm run create:folders && docker compose run --build --rm -e TEST_SCRIPT=local:browserstack fcp-mpdp-journey-test-suite"
  },
  "dependencies": {
    "@playwright/test": "^1.57.0",
    "browserstack-local": "^1.5.8",
    "browserstack-node-sdk": "^1.49.0",
    "allure-playwright": "^2.15.0",
    "allure-commandline": "2.32.0",
    "esm-module-alias": "2.2.1",
    "global-agent": "3.0.0",
    "undici": "7.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
